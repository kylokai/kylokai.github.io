  <script>
    const messages = [
      "happyyy belateddd bdayyy ðŸ’•",
      "eeee dahhh tuaaa ðŸ¤­",
      "semogaa ituu iniii ituu âœ¨",
      "ramaii sayangg kamuu ðŸ’«",
